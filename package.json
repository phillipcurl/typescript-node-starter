{
  "name": "typescript-node-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "license": "MIT",
  "author": "Phillip Curl <phillipcurl@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/phillipcurl/typescript-node-starter.git"
  },
  "scripts": {
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "precommit": "npm run tslint && npm test",
    "serve": "nodemon dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run build && npm run watch",
    "test": "jest --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "async": "^2.1.2",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "3.4.6",
    "body-parser": "1.15.2",
    "compression": "1.6.2",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.1",
    "debug": "^2.4.5",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.4.3",
    "express": "4.14.0",
    "express-flash": "^0.0.2",
    "express-jwt": "5.1.0",
    "express-session": "^1.14.2",
    "express-validation": "1.0.1",
    "express-validator": "^3.1.3",
    "express-winston": "2.1.2",
    "fbgraph": "^1.3.0",
    "helmet": "3.1.0",
    "http-status": "^0.2.0",
    "joi": "10.0.6",
    "jsonwebtoken": "7.1.9",
    "lodash": "^4.17.4",
    "lusca": "^1.4.1",
    "method-override": "^2.3.5",
    "mongoose": "4.7.4",
    "morgan": "1.7.0",
    "nodemailer": "^2.6.4",
    "passport": "0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-beta6",
    "request": "^2.78.0",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.2",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.32",
    "@types/cookie-parser": "^1.4.0",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/helmet": "^0.0.36",
    "@types/http-status": "^0.2.29",
    "@types/jest": "^19.2.2",
    "@types/joi": "^10.4.1",
    "@types/jquery": "^2.0.41",
    "@types/lodash": "^4.14.63",
    "@types/method-override": "^0.0.29",
    "@types/mongodb": "^2.1.43",
    "@types/mongoose": "^4.7.9",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.12",
    "@types/nodemailer": "^1.3.32",
    "@types/passport": "^0.3.3",
    "@types/passport-facebook": "^2.1.3",
    "@types/request": "0.0.45",
    "@types/supertest": "^2.0.0",
    "@types/winston": "^2.3.4",
    "commitizen": "^2.9.2",
    "concurrently": "^3.4.0",
    "coveralls": "^2.11.6",
    "cross-env": "3.1.3",
    "cz-conventional-changelog": "1.2.0",
    "del": "^2.2.0",
    "husky": "^0.13.1",
    "istanbul": "1.1.0-alpha.1",
    "jest": "^19.0.2",
    "mocha": "3.2.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "run-sequence": "^1.1.5",
    "shelljs": "^0.7.7",
    "supertest": "2.0.1",
    "supertest-as-promised": "4.0.2",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "typescript": "^2.4.0",
    "validate-commit-msg": "^2.6.1"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/test/**/*.test.(ts|js)"],
    "testEnvironment": "node"
  }
}
